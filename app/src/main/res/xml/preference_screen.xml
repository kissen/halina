<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Dictionary Management">
        <Preference
            android:id="@+id/preference_current_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:key="preference_current_dictionary"
            app:summary="2021-08-12 (101 MiB)"
            app:title="Currently installed dictionary" />
        <Preference
            android:id="@+id/preference_download_new_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_rotate"
            app:key="preference_download_new_dictionary"
            app:summary="Available: 2021-09-03 (120 MiB)"
            app:title="Download new dictionary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About Halina">
        <Preference
            android:id="@+id/preference_open_source_licenses"
            app:key="preference_open_source_licenses"
            app:summary="Used libraries and associated licenses"
            app:title="Open source licenses" />

        <Preference
            android:id="@+id/preference_app_version"
            app:key="preference_app_version"
            app:summary="@string/app_version"
            app:title="Version" />
    </PreferenceCategory>
</PreferenceScreen>